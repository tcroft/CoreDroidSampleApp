<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.coredroidsample"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="8" />

    <application android:icon="@drawable/icon" android:label="@string/app_name" android:name="SampleApp" android:debuggable="true">
        <activity android:name=".ui.AppLauncher"
                  android:label="@string/app_name" android:configChanges="keyboard|orientation">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.Main" android:configChanges="keyboard|orientation"></activity>
        <activity android:name=".ui.LoginDialog" android:theme="@android:style/Theme.Dialog" android:configChanges="keyboard|orientation"></activity>

    </application>
</manifest>